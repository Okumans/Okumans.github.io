---
import {
  Card,
  CardDescription,
  CardTitle,
  CardHeader,
  CardContent,
} from "./ui/card";

import { Image } from "astro:assets";
import { ContactCardWithLink } from "./contact-card";
import { ImagePopUp } from "./image-popup.tsx";
import { FaGithub } from "react-icons/fa";

interface Props {
  title: string;
  href: string;
  description: string;
  imageSrc?: string;
  imageWidth?: number;
  imageHeight?: number;
  altText?: string;
}

const { title, href, description, imageSrc, imageWidth, imageHeight, altText } =
  Astro.props;
---

<Card
  className="flex flex-col lg:flex-row w-full p-1 lg:p-5 md:p-8 gap-2 group border border-red"
>
  <CardHeader className="flex flex-col gap-5">
    <div class="flex flex-col gap-1">
      <CardTitle>{title}</CardTitle>

      <CardDescription>
        <p>{description}</p>
      </CardDescription>
    </div>

    <div class="flex justify-center">
      {
        !!imageSrc && (
          <ImagePopUp client:idle>
            <Image
              alt={altText || "Blank"}
              width={imageWidth || 0}
              height={imageHeight || 0}
              src={imageSrc}
              class="min-w-full min-h-full w-full h-full block lg:hidden rounded-md"
            />
          </ImagePopUp>
        )
      }
    </div>

    <ContactCardWithLink
      title={title}
      href={href}
      description={""}
      className="bg-gradient-to-r from-slate-900 to-black w-full"
      client:idle
    >
      <FaGithub className="w-6 h-6" />
    </ContactCardWithLink>
  </CardHeader>
  <CardContent className="hidden lg:block">
    {
      imageSrc && (
        <ImagePopUp client:idle>
          <Image
            alt={altText || "Blank"}
            width={imageWidth || 0}
            height={imageHeight || 0}
            src={imageSrc}
            class="min-w-96 w-full h-full rounded-md object-cover object-left"
          />
        </ImagePopUp>
      )
    }
  </CardContent>
</Card>
